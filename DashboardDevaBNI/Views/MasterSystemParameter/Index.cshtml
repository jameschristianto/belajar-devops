@using DashboardDevaBNI.Component;
@using Microsoft.AspNetCore.Http;﻿

@{
    ViewData["Title"] = "System Parameter";
}

@section Styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/adminlte-master/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/adminlte-master/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/adminlte-master/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">


    <!-- Toastr -->
    <link href="~/lib/adminlte-master/plugins/toastr/toastr.min.css" rel="stylesheet">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/lib/adminlte-master/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/adminlte-master/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/adminlte-master/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/adminlte-master/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/adminlte-master/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/adminlte-master/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>

    <!-- Validation -->
    <script src="~/lib/adminlte-master/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/adminlte-master/plugins/jquery-validation/additional-methods.min.js"></script>

    <!-- Toastr -->
    <script src="~/lib/adminlte-master/plugins/toastr/toastr.min.js"></script>

    <!-- Sweetalert -->
    <script src="~/lib/bootstrap-sweetalert/sweetalert.min.js"></script>

    
    
    @Html.Partial("_Script")
}


<div id="DivContentBody">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Master System Parameter</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Master System Parameter</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <h3 class="card-title">Master System Parameter</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <section class="content">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card card-info collapsed-card">
                                            <div class="card-header btn" data-card-widget="collapse" title="Collapse">
                                                <h3 class="card-title">Search</h3>
                                                <div class="card-tools">
                                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="card-body">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label>Key: </label>
                                                        <input id="txtKeySearchParam" type="search" class="form-control" placeholder="Type your Name Bank here">
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label>Value: </label>
                                                        <input id="txtValueSearchParam" type="search" class="form-control" placeholder="Type your Kode Bank here">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <div class="col-sm-12 ml-sm-auto">
                                                    <button class="btn btn-success" type="button" id="BtnSearch">
                                                        <i class="fas fa-search"></i>
                                                        Search
                                                    </button>
                                                    <button class="btn btn-danger" type="button" id="BtnClearSearch">
                                                        <i class="fas fa-undo"></i>
                                                        Clear
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="margin">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-info" onclick="Create()"><i class="fas fa-plus"></i> Tambah Data</button>
                                </div>
                            </div>
                            <div style="overflow-x:auto;">
                                <table id="Table" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px"></th>
                                            <th style="width: 230px"></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div id="DivFormBody">
</div>

