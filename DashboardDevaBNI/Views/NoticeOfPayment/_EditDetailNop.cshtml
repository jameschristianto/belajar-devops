@model DashboardDevaBNI.ViewModels.NoticeOfPayment_ViewModel


<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Edit Detail NOP</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form id="FormDetailNop">
    <div class="modal-body">
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.IdDetailNop)
        @Html.HiddenFor(m => m.NopId)
        <div class="form-group">
            <label>Creditor Ref <span class="labelMandatory">*</span> </label>
            @Html.TextBoxFor(m => m.CreditorRef, new { @class = "form-control", @value = "", @autocomplete = "off", @readonly = true })
        </div>
        <div class="form-group">
            <label>Outstanding <span class="labelMandatory">*</span> </label>
            @Html.TextBoxFor(m => m.Outstanding, new { @class = "form-control", @value = "", @autocomplete = "off", @required = true, @onkeyup = "FormatCurrency3(this)" })
        </div>
        <div class="form-group">
            <label>Principal <span class="labelMandatory">*</span> </label>
            @Html.TextBoxFor(m => m.Principal, new { @class = "form-control", @value = "", @autocomplete = "off", @required = true, @onkeyup = "FormatCurrency3(this)" })
        </div>
        <div class="form-group">
            <label>Interest <span class="labelMandatory">*</span> </label>
            @Html.TextBoxFor(m => m.Interest, new { @class = "form-control", @value = "", @autocomplete = "off", @required = true, @onkeyup = "FormatCurrency3(this)" })
        </div>
        <div class="form-group">
            <label>Fee<span class="labelMandatory">*</span> </label>
            @Html.TextBoxFor(m => m.Fee, new { @class = "form-control", @value = "", @autocomplete = "off", @required = true, @onkeyup = "FormatCurrency3(this)" })
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-info" type="button" id="SubmitDetailNop">
            Submit
        </button>

        <button class="btn btn-danger" type="button" id="CloseDetailNop" data-dismiss="modal" aria-hidden="true">
            Batal
        </button>
    </div>

</form>




