@model DashboardDevaBNI.ViewModels.NoticeOfDisbursement_ViewModel

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <h5><span class="pr-2">View Notice Of Disbursement</span></h5>
            </div>
            <div class="card-body">
                <form id="FormData">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div class="card-body">
                        <div class="form-group">
                            <label>NOD No <span class="labelMandatory">*</span></label>
                            @Html.TextBoxFor(m => m.NodNo, new { @class = "form-control", @value = "", @autocomplete = "off", @disabled = true })
                        </div>
                        <div class="form-group">
                            <label>NOD Date<span class="labelMandatory">*</span></label>
                            @Html.TextBoxFor(m => m.NodDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @autocomplete = "off", @disabled = true })
                        </div>
                        <div class="form-group">
                            <label>Cur<span class="labelMandatory">*</span></label>
                            @Html.DropDownListFor(m => m.Cur, (IEnumerable<SelectListItem>)ViewBag.Cur, "-Silahkan pilih-", new { @required = true, @class = "js-example-placeholder-multiple js-states form-control", @style = "width:100%", @disabled = true })
                        </div>
                        <div class="form-group">
                            <label>Value Date<span class="labelMandatory">*</span></label>
                            @Html.TextBoxFor(m => m.ValueDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @autocomplete = "off", @disabled = true })
                        </div>
                    </div>
                    <div id="DivTableCard" class="col-12">
                        <div class="card card-info">
                            <div class="card-body">
                                <div class="table-container">
                                    <table id="TableDetailNodView" class="table table-bordered table-hover w-100">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px"></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="DivTableCard" class="col-12">
                        <div class="card card-info">
                            <div class="card-body">
                                <div class="table-container">
                                    <div class="margin py-3">
                                    </div>
                                    <table id="TableFileNodView" class="table table-bordered table-hover w-100">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px"></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="col-sm-12 ml-sm-auto">
                            <button class="btn btn-danger" type="button" id="Back">
                                Batal
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
