@model DashboardDevaBNI.ViewModels.NoticeOfDisbursement_ViewModel



<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Create Detail NOD</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form id="FormDetailNod">
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Creditor Ref </label>
            @Html.DropDownListFor(m => m.CreditorRef, (IEnumerable<SelectListItem>)ViewBag.CreditorRef, "-Silahkan pilih-", new { @required = true, @class = "js-example-placeholder-multiple js-states form-control", @style = "width:100%" })
        </div>
        <div class="form-group">
            <label>Amount <span class="labelMandatory">*</span> </label>
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @value = "", @autocomplete = "off", @required = true, @onkeyup = "FormatCurrency(this)" })
        </div>
        <div class="form-group">
            <label>Amount IDR <span class="labelMandatory">*</span> </label>
            @Html.TextBoxFor(m => m.AmountIDR, new { @class = "form-control", @value = "", @autocomplete = "off", @required = true, @onkeyup = "FormatCurrency(this)" })
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-info" type="button" id="SubmitDetailNod">
            Submit
        </button>

        <button class="btn btn-danger" type="button" id="CloseDetailNod" data-dismiss="modal" aria-hidden="true">
            Batal
        </button>
    </div>

</form>




